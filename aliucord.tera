        "link": {{snow.sint32}},
        "brand_new_560": {{surface0.sint32}},
        "primary_dark_330": {{subtext1.sint32}},
        "status_grey_130": {{base.sint32}},
        "status_grey_200": {{mantle.sint32}},
        "status_grey_160": {{mantle.sint32}},
        "status_grey_100": {{base.sint32}},
        "uikit_btn_bg_color_selector_red": {{red.sint32}},
        "status_grey_530": {{text.sint32}},
        "status_grey_600": {{text.sint32}},
        "status_grey_900": {{text.sint32}},
        "uikit_btn_bg_color_selector_green": {{green.sint32}},
        "brand_500_alpha_20": {{fadeblue.sint32}},
        "brand_new_260": {{snow.sint32}},
        "brand_new": {{snow.sint32}}
